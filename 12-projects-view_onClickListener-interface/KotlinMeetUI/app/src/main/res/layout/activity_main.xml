<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="0"
            android:textSize="40sp"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtValue" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="192dp"/>
    <Button
            android:text="add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAdd"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="204dp"
            app:layout_constraintEnd_toStartOf="@+id/btnTake" android:layout_marginEnd="47dp"
    />
    <Button
            android:text="grow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGrow"
            app:layout_constraintStart_toStartOf="@+id/btnAdd" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/btnAdd"/>
    <Button
            android:text="hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHide"
            app:layout_constraintStart_toStartOf="@+id/btnGrow" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnGrow"/>
    <Button
            android:text="take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTake"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnAdd" android:layout_marginEnd="84dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="shrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnShrink"
            app:layout_constraintStart_toStartOf="@+id/btnTake" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTake"/>
    <Button
            android:text="reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnReset"
            app:layout_constraintStart_toStartOf="@+id/btnShrink" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnShrink"/>
</androidx.constraintlayout.widget.ConstraintLayout>